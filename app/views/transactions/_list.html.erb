<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover dataTable no-footer" 
    id="table_transaction">
    <thead>
      <tr>
        <th class="col-sm-1"><%= t("common.form.no") %></th>
        <th class="col-sm-2"><%= t("model.transaction.type.created_at") %></th>
        <th class="col-sm-2"><%= t("model.transaction.type.amount") %></th>
        <th class="col-sm-2"><%= t("model.transaction.type.type_id") %></th>
        <th class="col-sm-4"><%= t("model.transaction.type.description") %></th>
        <th class="col-sm-1"><%= t("common.form.action") %></th>
      </tr>
    </thead>

    <tbody>
      <% if @transactions.any? %>
        <% @start_count = 1 %>

        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= @start_count %></td>
            <td><%= transaction.created_at.strftime("%m/%d/%Y") %></td>
            <td>
              <% number = number_to_currency(transaction.amount, :unit => "Ä‘ ") %>
              <% if transaction.type_id == "Expense" %>
                <span class="expense">- <%= number %></span>
              <% else %>
                <span class="income">+ <%= number %></span>
              <% end %>  
            </td>
            <td><%= transaction.type_id %></td>
            <td><%= transaction.description %></td>
            <td>
              <a href="#" data-toggle="modal" data-target="#transaction_form" 
                class="transactions_edit" data-id="<%= transaction.id %>">
                <i class="fa fa-pencil-square-o custom-action-icon-green
                  custom-action-icon-edit">
                </i>
              </a>

              <a href="#modal-deletion" data-placement="right" 
                data-toggle="modal" data-id="<%= transaction.id %>">
                <i class="glyphicon glyphicon-trash glyphicon" 
                  data-id="<%= transaction.id %>"></i>
              </a>
            </td>
          </tr>

          <% @start_count += 1 %>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6" align="center"><%= t("common.table.empty") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
